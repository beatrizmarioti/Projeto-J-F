<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="32dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#8CB65E">

        <TextView
            android:id="@+id/nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fulano Exemplo"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/cracha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Crachá: 123456"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Início: 01/01/2025 08:00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/cracha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/label_termino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Término:"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/inicio"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/termino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="01/01/2025 09:00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/inicio"
            app:layout_constraintStart_toEndOf="@id/label_termino"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/botao_terminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encerrar atendimento"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#557A46"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/inicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
